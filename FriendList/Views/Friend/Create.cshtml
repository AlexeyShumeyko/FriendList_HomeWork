@model FriendList_DomainModel.ViewModel.CreateFriendViewModel
@using FriendList.Controllers

@{
    ViewData["Title"] = "Home Page";
}

<h4 class="mb-3 text-muted">Добавить друга</h4>

@using (Html.BeginForm(
 actionName: nameof(FriendController.Create),
 controllerName: Html.ViewContext.RouteData.Values["controller"].ToString(),
 FormMethod.Post))
{
    <div class="mb-3">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Place)
        @Html.EditorFor(model => model.Place)
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}